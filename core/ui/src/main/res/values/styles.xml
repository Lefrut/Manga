<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Manga.InputLayout.Login" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@drawable/border_stroke_color_selector</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="Widget.Manga.EditText.Login" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="hintTextAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Widget.Manga.EditText.Password" parent="Widget.Manga.EditText.Login">
        <item name="android:inputType">textPassword</item>
    </style>

</resources>