<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Manga.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main_light</item>
        <item name="colorOnPrimary">@color/primary_white_light</item>
        <item name="colorOnPrimarySurface">@color/primary_black_light</item>
        <!-- Secondary brand color. -->
        <item name="secondaryBackground">@drawable/secondary_gradient</item>
        <item name="colorSecondary">@color/secondary_gradient_part1_light</item>
        <item name="colorSecondaryVariant">@color/secondary_gradient_part2_light</item>
        <item name="colorOnSecondary">@color/secondary_gray_light</item>
        <item name="MetaColor">@color/meta_color_light</item>
    </style>


    <style name="Theme.Manga.Connect" parent="Theme.Manga.Light"/>

    <style name="Theme.Manga.V21" parent="Theme.Manga.Connect">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="textAppearanceHeadline1">@style/Manga.TextAppearance.H1</item>
        <item name="textAppearanceHeadline2">@style/Manga.TextAppearance.H2</item>
        <item name="textAppearanceHeadline3">@style/Manga.TextAppearance.H3</item>
        <item name="textAppearanceHeadline4">@style/Manga.TextAppearance.H4</item>
        <item name="textAppearanceHeadline5">@style/Manga.TextAppearance.H5</item>
        <item name="textAppearanceHeadline6">@style/Manga.TextAppearance.H6</item>
    </style>


    <style name="Theme.Manga" parent="Theme.Manga.V21"/>


</resources>